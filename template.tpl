// FDC Pixel V1.0 //
//set api requirements
const sendPixel = require('sendPixel');
const getTimestamp = require('getTimestamp');
const makeInteger = require('makeInteger');
const makeString = require('makeString');
const setCookie = require('setCookie');
const getCookie = require('getCookieValues');
const log = require('logToConsole');
const queryPermission = require('queryPermission');
const getUrl = require('getUrl');
const object = require('Object');
const parseUrl = require('parseUrl');

let utmId;

//set variables
const cookieValues = getCookie('__fdc_values')[0];
const event = data.eventName;
const eventTimestamp = getTimestamp();
const url = getUrl();
const val = parseUrl(url);
const obj = val.searchParams ;
// Partner identification Code
const partnerCode = data.identificationCode;
// Endpoint
const endPoint = data.endpointName;
// PDP View ----------
const itemID = data.itemID;
// Url
const sendUrl = val.hostname + val.pathname; 

// Cookies Logic ---------------------------
// check if utm_id is in URL
if(obj.utm_id && obj.utm_source === 'fdc') {
// set utm_id variable  
    utmId = obj.utm_id;
// set cookie with utm_id value
    if (queryPermission('set_cookies', '__fdc_values')) {
      setCookie("__fdc_values", utmId, {
        domain: 'auto',
        path: '/',
        // Set the cookie to expire in 1 year 
        // (formula = 60sec x 60 min x 1000 x 24 x 365)
        'max-age': 3600000*24*365,
      });
    } else {
      log('Invalid permissions for writing cookie!');    
    }
}
// check if cookie present
else if (cookieValues.length > 0) {
// pull cookie value and set variable
utmId = cookieValues;
}
// Ends Cookies Logic ----------------------

// Only send a payload if the event isn't a page_view one
if (event != 'page_view'){
  if(utmId) {
    let payload;
    // View Item ---------------------------------------------------------
    if (event == 'view_item'){
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&itemId=' + itemID + 
        '&url=' + sendUrl;
    }
 // Purchase ---------------------------------------------------------
    else if (event == 'purchase'){
      // Transaction ---------
      const transactionId = data.transactionId; // Transaction ID
      const revenue = data.revenue; // Revenue
      const items_array = data.itemsArray;
      const includeItems = data.includeItemsInPurchase;
      let items;
      let basketSize;
      let item_id_array;
      let item_id_string;
      if (includeItems){
          if (items_array && items_array.length > 0){
    // Join the item IDs with an underscore
          item_id_string = items_array.join('_');
          basketSize = items_array.length;//items_array.length;

          }
      }
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&itemId=' + item_id_string + 
        '&transactionId=' + transactionId +
        '&basketSize=' + basketSize +
        '&revenue=' + revenue +
        '&url=' + sendUrl;
     }
    // Add to Cart ---------------------------------------------------------
    else if (event == 'add_to_cart'){
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&itemId=' + itemID + 
        '&url=' + sendUrl;
     }
    // Favorite ------------------------------------------------------------
    else if (event == 'favorite'){
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        //'&favorite=' + favorite +
        '&itemId=' + itemID + 
        '&url=' + sendUrl;
     }
    // Create Account ---------------------------------------------------------
    else if (event == 'create_account'){
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&url=' + sendUrl;
     }
    // Begin Checkout ---------------------------------------------------------
    else if (event == 'begin_checkout'){
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&url=' + sendUrl;
     }
    // Select Filter ---------------------------------------------------------
    else if (event == 'select_filter'){
      const filter = data.filter;
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&filter=' + filter +
        '&url=' + sendUrl;
     }
    // Search -----------------------------------------------------------------
    else if (event == 'search'){

      let search_string;
      const includeSearch = data.includeSearch;
      if (includeSearch){
        const submited_search = data.search; 
        const search_array = submited_search.split(" "); 
        search_string = search_array.join('_');      
      }    
      // Define the payload
      payload = '?partnerCode=' + partnerCode + '&eventName=' + event + '&eventTimestamp=' + eventTimestamp + 
        '&user_session_id=' + utmId + 
        '&search=' + search_string +
        '&url=' + sendUrl;
      
     }
  
    // send pixel
    sendPixel(endPoint + payload, null, null);
  
    // signal tag completion
    data.gtmOnSuccess();  
}}
return;


